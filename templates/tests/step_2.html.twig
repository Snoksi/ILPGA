{% extends 'base.html.twig' %}

{% block title %}Créer un test{% endblock %}

{% block body %}
    {#{{ form_start(form) }}#}
    {#{{ form_widget(form) }}#}
    {#<input type="submit" value="Envoyer">#}
    {#{{ form_end(form) }}#}

    {% include '_layouts/sidebar.html.twig' %}

    <main id="pretest" class="pagesForm">
        <div class="conteneur">
            <header>
                <h1>Formulaire pre/post-test</h1>
                <p>Sélectionnez les questions qui seront posées avant ou après le test. Vous pouvez ajouter d’autres pages de questions si besoin.</p>
            </header>

            {{ form_start(form) }}
            <div class="definirTitre">
                <div class="ligneIntitule">
                    <label for="titrePage"><p>Titre de la page</p></label>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto interrogation">
                </div>
                <input type="text" id="titrePage" name="titrePage">
            </div>
            <div class="positionnement">
                <label>Positionnement de cette page</label>

                <div class="groupeRadio">
                    <input type="radio" name="positionnement" id="radioDebut">
                    <label for="radioDebut">Au début du test</label>

                    <input type="radio" name="positionnement" id="radioFin">
                    <label for="radioFin">A la fin du test</label>
                </div>

            </div>

            <div class="listeCheckbox">
                <div class="ligneCheckbox">
                    <div class="bouton">
                        {{ form_widget(form.gender) }}

                        <p>{{ form_label(form.gender) }}<span> (homme/femme)</span></p>
                    </div>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                </div>

                <div class="ligneCheckbox">
                    <div class="bouton">
                        {{ form_widget(form.age) }}
                        <p>{{ form_label(form.age) }}<span> (valeur)</span></p>
                    </div>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                </div>

                <div class="ligneCheckbox">
                    <div class="bouton">
                        {{ form_widget(form.has_headphones) }}
                        <p>{{ form_label(form.has_headphones) }}<span> (oui/non)</span></p>
                    </div>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                </div>

                <div class="ligneCheckbox">
                    <div class="bouton">
                        {{ form_widget(form.code) }}
                        <p>{{ form_label(form.code) }}<span> (champ texte)</span></label>
                    </div>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                </div>
            </div>
            <section class="ajoutQuestion">
                <div class="autreQuestion">
                    <div class="bouton">
                        <input type="checkbox" name="aQuestion" id="aQuestion">
                        <label for="aQuestion">Autre question</label>
                        <img src="{{  asset('img/picto/plus-sign-in-a-black-circle.svg') }}" alt="picto plus">
                    </div>
                    <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                </div>

                <div class="redactionQuestion">
                    <div class="ligneIntitule">
                        <label>Question</label>
                        <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                    </div>
                    <input type="text" name="questionAjoutee-1">
                </div>

                <div class="choixTypeReponse">
                    <div class="ligneIntitule">
                        <label>Types de réponse <span>(une fenêtre s'ouvrira pour définir les réponses)</span></label>
                        <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                    </div>

                    <div class="listeChoix">
                        <div class="choix">
                            <p>Choix unique</p>
                            <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                        </div>

                        <div class="choix">
                            <p>Choix multiple</p>
                            <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                        </div>

                        <div class="choix">
                            <p>Champ texte</p>
                            <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                        </div>

                        <div class="choix">
                            <p>Echelle</p>
                            <img src="{{ asset('img/picto/question-mark-blue.svg') }}" alt="picto question">
                        </div>
                    </div>
                </div>
            </section>

            <div class="bas">
                <div class="doubleBoutons">
                    <a href="" class="demiboutonValidation">Ajouter une autre page de questions</a>
                    <a href="" class="demiboutonValidation">Prévisualiser la page</a>
                </div>

                <input type="submit" class="boutonValidation" value="Passer à la page de remerciements">
            </div>


            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}
